@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "تأكيد عملية التسجيل";
}

<h1 style="font-family: Cairo;direction:rtl">@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
        <p style="font-family: Cairo;direction:rtl">
    <a id="confirm-link" href="@Model.EmailConfirmationUrl">اضغط هنا لتاكيد عملية الاشتراك</a>
</p>
    }
    else
    {
        <p style ="font-family: Cairo;direction:rtl">
        الرجاء قراءة صندوق الوارد بغرض تاكيد عملية الاشتراك
</p>
    }
}
